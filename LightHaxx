-- Toggle helper
local function createToggle(parent,text,settingKey,callback)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(1,0,0,30)
    btn.BackgroundColor3 = settings[settingKey] and Color3.fromRGB(180,0,255) or Color3.fromRGB(120,0,200)
    btn.BackgroundTransparency = 0.3
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 16
    btn.Text = text.." "..(settings[settingKey] and "âœ…" or "âŽ")
    Instance.new("UICorner", btn)
    
    btn.MouseButton1Click:Connect(function()
        local newValue = not settings[settingKey]
        btn.Text = text.." "..(newValue and "âœ…" or "âŽ")
        btn.BackgroundColor3 = newValue and Color3.fromRGB(180,0,255) or Color3.fromRGB(120,0,200)
        updateSetting(settingKey, newValue)
        if callback then callback(newValue) end
    end)
end

local function addLayout(frame)
    local layout = Instance.new("UIListLayout", frame)
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Padding = UDim.new(0,5)
end

-- Fill sections
addLayout(sections.Main)
createToggle(sections.Main,"Auto Drink","autoDrink")
createToggle(sections.Main,"Auto Equip","autoEquip")
createToggle(sections.Main,"Auto Prestige","autoPrestige")
createToggle(sections.Main,"Auto Gems","autoGems")

addLayout(sections.System)
createToggle(sections.System,"Safe Spawn","safeSpawn")
createToggle(sections.System, "Speed Boost", "speedBoost", function(on)
    local originalSpeed = nil

    local function applySpeedToCharacter(charHum)
        if not charHum then return end
        if on then
            if originalSpeed == nil then
                originalSpeed = charHum.WalkSpeed
            end
            charHum.WalkSpeed = 700
        else
            if originalSpeed then
                charHum.WalkSpeed = originalSpeed
                originalSpeed = nil
            end
        end
    end

    -- Apply to current character if exists
    local char = LocalPlayer.Character
    local humanoid = char and char:FindFirstChildOfClass("Humanoid")
    applySpeedToCharacter(humanoid)

    -- Continuous enforcement while ON
    if on then
        task.spawn(function()
            while settings.speedBoost do
                local c = LocalPlayer.Character
                local h = c and c:FindFirstChildOfClass("Humanoid")
                if h then
                    h.WalkSpeed = 700
                end
                task.wait(0.1)
            end
        end)
    end
end)

-- âœ… Auto-apply on spawn or script load
local function enforceSpeedBoostOnSpawn(char)
    task.spawn(function()
        local hum = char:WaitForChild("Humanoid", 5)
        if hum then
            -- capture normal speed once per session
            if not _G._originalSpeed then
                _G._originalSpeed = hum.WalkSpeed
            end
            if settings.speedBoost then
                task.wait(0.5)
                hum.WalkSpeed = 700
                -- keep reapplying while active
                task.spawn(function()
                    while settings.speedBoost do
                        local c = LocalPlayer.Character
                        local h = c and c:FindFirstChildOfClass("Humanoid")
                        if h then
                            h.WalkSpeed = 700
                        end
                        task.wait(0.1)
                    end
                end)
            end
        end
    end)
end

-- Hook for new characters
LocalPlayer.CharacterAdded:Connect(enforceSpeedBoostOnSpawn)

-- Run once for current character (if already loaded)
if LocalPlayer.Character then
    enforceSpeedBoostOnSpawn(LocalPlayer.Character)
end

createToggle(sections.System,"Walk On Water","walkOnWater", function(on)
    local function applyWalkOnWater(enable)
        for _, obj in pairs(workspace:GetChildren()) do
            if obj:IsA("BasePart") and obj.Name == "Part" then
                obj.CanCollide = enable -- in original you toggled, keep consistent
            end
        end
        local borderWalls = workspace:FindFirstChild("BorderWalls")
        if borderWalls then
            for _, obj in pairs(borderWalls:GetDescendants()) do
                if obj:IsA("BasePart") then
                    obj.CanCollide = not enable -- border walls are inverted
                end
            end
        end
    end
    applyWalkOnWater(on)
end)
createToggle(sections.System,"Night Mode","nightMode", function(on)
    local Lighting = game:GetService("Lighting")
    if on then
        Lighting.ClockTime = 20
    else
        Lighting.ClockTime = 14
    end
end)
createToggle(sections.System,"Infinite Jump","infiniteJump") -- input handled below

addLayout(sections.Protection)
createToggle(sections.Protection,"Anti AFK","antiAFK")
createToggle(sections.Protection,"Anti Kick","antiKick")

