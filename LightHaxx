    btn.MouseButton1Click:Connect(function()
        activeTab = tabName
        for n,s in pairs(sections) do s.Visible=(n==tabName) end
    end)
end

-- Minimize logic
minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        TweenService:Create(mainFrame,TweenInfo.new(0.3),{Size=UDim2.new(0,60,0,30)}):Play()
        contentContainer.Visible = false
    else
        TweenService:Create(mainFrame,TweenInfo.new(0.3),{Size=UDim2.new(0,350,0,250)}):Play()
        contentContainer.Visible = true
    end
end)

--=============================
-- AUTO FUNCTIONS
--=============================

-- Auto Equip (retry every 1s, works after death)
task.spawn(function()
    while task.wait(1) do
        if settings.autoEquip then
            local points = burpPoints.Value
            local char = LocalPlayer.Character
            local humanoid = char and char:FindFirstChildOfClass("Humanoid")

            if humanoid then
                -- Find best drink you qualify for
                local chosen
                for _, d in ipairs(drinks) do
                    if points >= d.requirement then
                        chosen = d.name
                    end
                end

                if chosen then
                    -- Look for the drink in Backpack
                    local tool = LocalPlayer.Backpack:FindFirstChild(chosen)
                    if tool then
                        humanoid:EquipTool(tool)
                    end
                end
            end
        end
    end
end)

-- Auto Drink
task.spawn(function()
    while task.wait(2.34) do
        if settings.autoDrink then
            game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Starter Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Second Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Third Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Fourth Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Fifth Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Sixth Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Seventh Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Eighth Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Ninth Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Atomic Drink")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Omega Burp Juice")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Thunder Fizz")
		game.ReplicatedStorage.RemoteEvents.DrinkEvent:FireServer("Garlic Juice")
        end
    end
end)

-- Auto Prestige
task.spawn(function()
    while task.wait(5) do
        if settings.autoPrestige then
            local remote = ReplicatedStorage:FindFirstChild("RemoteEvents")
            if remote and remote:FindFirstChild("PrestigeEvent") then
                remote.PrestigeEvent:FireServer()
            end
        end
    end
end)

-- Auto Gems
task.spawn(function()
    while task.wait(0.3) do
        if settings.autoGems then
            local char = LocalPlayer.Character
            local root = char and char:FindFirstChild("HumanoidRootPart")
            if root then
                local diamondsFolder = workspace:FindFirstChild("Diamonds")
                if diamondsFolder then
                    for _, gem in ipairs(diamondsFolder:GetChildren()) do
                        if gem:IsA("BasePart") then
                            -- Anchor gem locally and move it to player
                            pcall(function()
                                gem.Anchored = true
                                gem.CFrame = root.CFrame * CFrame.new(0, 0, -2) -- offset behind player
                            end)
                        end
                    end
                end
            end
        end
    end
end)

-- Infinite Jump input handling
game:GetService("UserInputService").JumpRequest:Connect(function()
    if settings.infiniteJump then
        local char = game.Players.LocalPlayer.Character
        if char then
            local humanoid = char:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid:ChangeState("Jumping")
            end
        end
    end
end)

-- Safe Spawn
LocalPlayer.CharacterAdded:Connect(function(char)
    task.wait(1)
    if settings.safeSpawn then
        local hrp = char:WaitForChild("HumanoidRootPart",5)
        if hrp then
            hrp.CFrame = CFrame.new(safeSpawnCoords + Vector3.new(0,3,0))
        end
    end
end)

-- Optimized Anti AFK & Anti Kick
do
    local vu = game:GetService('VirtualUser')
    LocalPlayer.Idled:Connect(function()
        if settings.antiAFK then
            vu:CaptureController()
            vu:ClickButton2(Vector2.new())
        end
    end)

    -- Anti Kick attempts to neutralize common kick calls
    local success, mt = pcall(function() return getrawmetatable(game) end)
    if success and mt then
        local old = mt.__namecall
        local protect = newcclosure or protect_function or function(f) return f end
        setreadonly(mt, false)
        mt.__namecall = protect(function(self, ...)
            local method = getnamecallmethod()
            if method == "Kick" then
                -- ignore kicks by blocking
                return
            end
            return old(self, ...)
        end)
        pcall(function()
            hookfunction(game.Players.LocalPlayer.Kick, protect(function() end))
        end)
    end
end

--=============================
-- AUTO RESTORE ACTIVE FEATURES
--=============================
task.defer(function()
    task.wait(1) -- give UI a moment to fully initialize before applying

    -- Helper: safely call the same logic as if toggle was clicked
    local function applySetting(key, callback)
        local value = settings[key]
        if value and callback then
            callback(true)
        end
    end

    -- Apply each feature that needs to initialize itself
    if settings.safeSpawn then
        local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart",5)
        if hrp then
            hrp.CFrame = CFrame.new(safeSpawnCoords + Vector3.new(0,3,0))
        end
    end

    if settings.speedBoost then
        local char = LocalPlayer.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = 700 end
    end

    if settings.nightMode then
        game:GetService("Lighting").ClockTime = 20
    end

    if settings.walkOnWater then
        for _, obj in pairs(workspace:GetChildren()) do
            if obj:IsA("BasePart") and obj.Name == "Part" then
                obj.CanCollide = true
            end
        end
        local borderWalls = workspace:FindFirstChild("BorderWalls")
        if borderWalls then
            for _, obj in pairs(borderWalls:GetDescendants()) do
                if obj:IsA("BasePart") then
                    obj.CanCollide = false
                end
            end
        end
    end

    if settings.showStatsUI then
        spawnStatsMonitor()
    end
end)
